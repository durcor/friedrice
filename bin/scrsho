#!/bin/sh
if ls /usr/bin/maim 1> /dev/null 2>&1; then
    scrcmd="maim -u -n 2 -s"
else
    scrcmd="scrot -s"
fi

scrpath="~/scr/$(date +%Y-%m-%d_%H%M-%S).png"

$scrcmd $scrpath $1
notify-send "Screenshot saved to $scrpath"

if [ "$1" == "up"]; then
    upurl=$(upmix $scrpath)
    notify-send "Screenshot uploaded to $upurl
fi
