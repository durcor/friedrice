#!/bin/sh

TKG_DIR="$HOME/prg/pkgbuild/tkg"

cd "$TKG_DIR" || exit

for pkg in "$TKG_DIR"/*; do
    cd "$pkg" || exit
    echo "$pkg: $(git pull --recurse-submodules)"
    # if [ "$(git pull --recurse-submodules)" != "Already up to date." ]; then
    #     rm *.tar
    #     makepkg -si
    # fi
    cd "$TKG_DIR" || exit
done
