#!/bin/bash

vidSites="youtube.com
	\|hooktube.com
	\|youtu.be
	\|share.tube
	\|motherless.com
	\|spankbang.com
	\|pornhub.com
	\|twitch.tv
	"
bitchute="bitchute.com"
ext="${1##*.}"
mpvFiles="mkv mp4 gif webm mp3 flac opus mp3?source=feed png jpg jpeg jpe"
zathuraFiles="pdf"
browserSites="bloomberg.com
	\|t.co
	\|google.com
	\|reuters.com
	\|slashdot.org
	\|zerohedge.com
	\|feedburner.com
	\|mises.org
	\|lewrockwell.com
	\|cbo.gov
	\|nber.org
	\|ffwiley.com
	\|stlouisfed.org
	\|realclearpolitics.com
	\|vsco.co
	\|instagram.com
	"

if echo $1 | grep -w "$vidSites" > /dev/null; then
	setsid -f nohup mpv "$1" > /dev/null & disown
elif echo $1 | grep -w "$browserSites" > /dev/null; then
	setsid -f nohup $BROWSER "$1" > /dev/null & disown
elif echo $zathuraFiles | grep -w $ext > /dev/null; then
	setsid -f nohup zathura "$1" > /dev/null & disown
elif echo $mpvFiles | grep -w $ext > /dev/null; then
	setsid -f nohup mpv "$1" > /dev/null & disown
elif echo "$bitchute" / grep "$bitchute" > /dev/null; then
	setsid -f nohup bitplay "$1" > /dev/null & disown
#elif
	#setsid -f nohup $BROWSER "$1" > /dev/null & disown
fi
