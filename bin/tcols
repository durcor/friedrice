#!/bin/sh

bg="tput setab"
fg="tput setaf"
clear="tput sgr 0"

echo "
    $($bg 0) $($fg 15)  0  \
$($bg 1) $($fg 0)  1  \
$($bg 2) $($fg 0)  2  \
$($bg 3) $($fg 0)  3  \
$($bg 4) $($fg 0)  4  \
$($bg 5) $($fg 0)  5  \
$($bg 6) $($fg 0)  6  \
$($bg 7) $($fg 0)  7  \
$($clear)
    $($bg 8) $($fg 15)  8  \
$($bg 9) $($fg 0)  9  \
$($bg 10) $($fg 0) 10  \
$($bg 11) $($fg 0) 11  \
$($bg 12) $($fg 0) 12  \
$($bg 13) $($fg 0) 13  \
$($bg 14) $($fg 0) 14  \
$($bg 15) $($fg 0) 15  \
$($clear)
"
