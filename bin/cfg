#!/bin/sh

. $HOME/.cache/wal/colors.sh

if [ ! -f ~/.config/cfg/al ]; then
    mkdir ~/.config/cfg
    touch ~/.config/cfg/al
fi

refreshcfg() {
    wpg -s "$(wpg -c)"

    if command -v openrgb >/dev/null; then
        sudo openrgb \
        -d 0 `# Left RAM Stick` \
            -c "$(echo $color14 | sed 's/#//')" -m Static \
        -d 1 `# Right RAM Stick` \
            -c "$(echo $color9 | sed 's/#//')" -m Static \
        -d 2 `# X570 Taichi` \
            `#-c ${color9:1} -m Neon \ ` \
            -m Random
    fi

    if lsusb | grep NZXT; then
        sudo liquidctl set led1 color starry-night "$(echo "$color14" | sed 's/#//')"
        sudo liquidctl set led2 color starry-night "$(echo "$color11" | sed 's/#//')"
    fi

    if lsusb | grep AMD; then
        wraith-master -m swirl -c "$color14" ring
        wraith-master -m static -c "$color11" logo
        wraith-master --mirage on fan
        wraith-master -c "$color9" fan
    fi

    if lsusb | grep Microdia; then
        rgb_keyboard -c 000000
    fi

    if lsusb | grep Razer; then
        razerricer
    fi

    if pgrep qutebrowser; then
        qutebrowser :config-source &
    fi

    if [ "$WAYLAND_DISPLAY" ]; then
        sway restart &
    else
        i3 restart &
    fi
    # cd ~/prg/st || exit
    # sudo make clean install
    cd ~/prg/dmenu || exit
    sudo make clean install
    cd ~/prg/slock || exit
    sudo make clean install
    wal_steam -g
    pywalfox update
    oomox-cli ~/.cache/wal/colors-oomox
    # oomoxify-cli -s /opt/spotify/Apps ~/.cache/wal/colors-oomox
    pywal-discord
    sleep 1
    pywal-discord

    if pgrep spotify; then
        spicetify apply
        sleep 1
        playerctl -p spotify play
    else
        spicetify apply
        sleep 1
        killall -9 spotify
    fi
}


addcfg() {
    cfgalias=$3
    newcfg=$(readlink -f "$2")
    echo "$cfgalias $newcfg" >> ~/.config/cfg/al
}

editcfg() {
    if [ "$2" = "" ];then
        cfgfileloc=$(awk '{print $1 " " $2}' ~/.config/cfg/al | fzf)
    else
        cfgfileloc=$(awk '{print $2}' ~/.config/cfg/al)
    fi

    cfgfilepostrun="$(grep "$cfgfileloc" ~/.config/cfg/al | awk '{$1="" ; $2="" ; print}' ~/.config/cfg/al)"

    if [ "$(stat -c %U "$cfgfileloc")" = "ty" ];then
        $EDITOR "$cfgfileloc"
    else
        sudoedit "$cfgfileloc"
    fi

    $cfgfilepostrun
}

listcfg() {
    awk '{print $1}' ~/config/cfg/al
}

case $1 in
    r|rf|re|refresh)refreshcfg;;
    a|add)addcfg "$@";;
    e|ed|edit)editcfg "$@";;
    l|ls|list)listcfg;;
esac
