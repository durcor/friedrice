#!/bin/sh

setwal(){
    wpg -s $1
    cfgrf
}

pickwal(){
    setwal $(wpg -l | fzf)
}

shufwal(){
    wpg -z $(wpg -c)
    cfgrf
}

randwal(){
    wpg -m
    cfgrf
}

colbright(){
    echo
}

colsat(){
    echo
}

cyclewal(){
    while true; do
    	wpg -m
    	cfg rf
    	sleep 10
    done
}

case $1 in
    set|se) setwal ;;
    pick|p) pickwal ;;
    shuf|sh) shufwal ;;
    rand|r) randwal ;;
esac
