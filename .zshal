arm() {
  aarch64-linux-gnu-as "$@" -o aarch64-tmp.o &&
    aarch64-linux-gnu-ld -lc aarch64-tmp.o -o aarch64-tmp &&
    qemu-aarch64 -L /usr/aarch64-linux-gnu aarch64-tmp
  exit_status=$?
  rm aarch64-tmp.o aarch64-tmp qemu_aarch64-tmp_*.core 2>/dev/null
  return $exit_status
}

