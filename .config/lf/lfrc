# https://godoc.org/github.com/gokcehan/lf

set preview
set previewer ~/.config/lf/prev
set hidden
set color256
set ifs "\n"
# set drawbox
set icons
set shell sh
# Keep cursor centered
set scrolloff 1000
set shellopts '-eu'
set ignorecase
set number
set relativenumber
# set tabstop
# atime: last time read
# ctime: last time metadata changed (file permissions)
# natural: 
set sortby time
set reverse
set info size
set period 1
set ratios 1:2:3
# set ratios 100:1
set dircounts
# set promptfmt " \[\033[38;5;166m\]%u\[\033[38;5;244m\]@\[\033[38;5;217m\]%h\[\033[38;5;15m\] \[\033[38;5;155;1m\]%w" 

set noanchorfind
set findlen 0

cmd open ${{
    case $(file --mime-type "$f" -bL) in
    text/*|application/json|inode/*|application/z*)
        edit "$f"
            ;;
    video/*|image/*|audio/*) 
        mpv "$f"
            ;;
    application/pdf)
        zathura "$f"
            ;;
    application/x-dosexec) 
        wine "$f"
            ;;
    application/vnd*) 
        libreoffice "$f"
            ;;
    *)
        echo "File cannot be opened"
            ;;
    esac
}}

cmd extract ${{
    for file in $fx; do
        case $file in
            *.zip)
                unzip "$file"
                rm "$file"
                ;;
            *.tar.zst)
                tar -I zstd -xvf "$file"
                rm "$file"
                ;;
            *.zst)
                zstd -d "$file"
                rm "$file"
                ;;
            *.7z)
                7z x "$file"
                rm "$file"
                ;;
            *)
                echo "File cannot be extracted"
                ;;
        esac
    done
}}

cmd mkdir ${{
    printf "Directory Name: "
    read name
    mkdir $name
}}

cmd touch ${{
    printf "File Name: "
    read name
    $EDITOR $name
}}

cmd chmod ${{
    for file in $fx; do
        chmod +x $file
    done
}}

map gg top
