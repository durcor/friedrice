# https://godoc.org/github.com/gokcehan/lf

set preview
set previewer ~/.config/lf/prev
set hidden
set ifs "\n"
# set drawbox
set icons
set shell sh
# Keep cursor centered
set scrolloff 1000
set shellopts '-eu'
set ignorecase
set number
set relativenumber
# set tabstop
# atime: last time read
# ctime: last time metadata changed (file permissions)
# natural:
set sortby time
set reverse
set info size
set period 1
set ratios 1:2:3
# set ratios 1:2:3:4:6
# set ratios 100:1
set dircounts
# 38 is fg
# 48 is bg
# the # before the m is the terminal color (0-255)
set promptfmt "
\033[38;5;9m
\033[48;5;8m
 %u
\033[38;5;13m
@
\033[38;5;12m
\033[48;5;8m
%h
\033[38;5;8m
\033[48;5;10m

\033[38;5;8m
\033[48;5;10m
 %w/
\033[38;5;8m
\033[48;5;10m
\033[1m
%f
\033[38;5;10m
\033[48;5;0m

"

set noanchorfind
set findlen 0

cmd open $open $fx
cmd extract $extract $fx

cmd mkdir ${{
    printf "Directory Name: "
    read name
    mkdir $name
}}

cmd touch ${{
    printf "File Name: "
    read name
    $EDITOR $name
}}

cmd chmod ${{
    for file in $fx; do
        chmod +x $file
    done
}}

cmd fzfcd ${{
    find / -type d 2>/dev/null | fzf
}}

map gg top
map gm cd ~/data/mus
map gd cd ~/doc
map gv cd ~/data/vid
map gp cd ~/pic
map gP cd ~/prg
map gw cd ~/pic/wal
map gz cd ~/dl
map gc cd ~/.config
map gG cd ~/data/gam
map ge cd /etc
map gt cd ~/.local/share/Trash

map y
map yy copy

# Copy selected file's path
map yp %readlink -f "$f" | xclip -se c -i
# Copy selected file's name
map yn %echo "$f" | xclip -se c -i
# Yank a file in its entirety with respect to its mime type to
# the clipboard
map yf %xclip -se c -i "$f" -t "$(file -b --mime-type "$f")"
# Put the selected files in a temporary gtk window which allows them
# to be dragged and dropped into different gui applications (such as web browsers and chat clients)
map yv %dragon-drag-and-drop $fx

map u unselect
map U clear

# map $

map v :toggle
map V invert

map p paste
map x $trash $fx

map d
map dd cut
map df delete
map dG $rm -rf ~/data/.garb/* ; rm -rf ~/data/.garb/.*

map o extract
map O mkdir

map c
map cw $vimv $fx
map ce $vimv $fx
map cv set ratios 1:2
map cV set ratios 1:2:3
# Interactively cd to a new directory inside of lf with
# tab-completion
map cd push :cd<space>
map cD

map A $vimv $fx

map q quit
map Q quit

map i $edit "$f"
map I $nvr -cc call TermOpen(&shell,'v')

map e
map E

map w
map wa %walman add "$f"
map ws %walman set "$f"
map wz %walman shuf
map wg %autoglitch "$f"

map z
map za
map zt

map S $$SHELL

map <space>
map <space>r source ~/.config/lf/lfrc
map <space>R set reverse!
map <space>st set sortby time
map <space>ss set sortby size
