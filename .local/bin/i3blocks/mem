#!/bin/sh
case $BLOCK_BUTTON in
    1)
        notify-send \
            -h string:x-canonical-private-synchronous:i3bmem \
            "Memory usage" "$(ps axch -o cmd:15,%mem --sort=-%mem | head)"
                    ;;
            esac

command=$(free -h | awk '/^Mem:/ {print $3 "/" $2}')

echo "  $command"
