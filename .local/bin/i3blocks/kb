#!/bin/sh

case $BLOCK_BUTTON in
	1)
        xkblayout-state set +1
        ;;
    2)
        xkblayout-state set +1
        ;;
	3) 
        xkblayout-state set +1
        ;;
	4) 
        xkblayout-state set +1
        ;;
	5) 
        xkblayout-state set -1
        ;;
esac

current_lang=$(xkblayout-state print %n)
if [ "$current_lang" = "English" ];then
    icon=" "
else
    icon=" "
fi

echo "  $icon"
