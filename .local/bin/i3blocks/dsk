#!/bin/sh

# Status bar module for disk space
# $1 should be drive mountpoint
# $2 is optional icon, otherwise mountpoint will displayed

[ -z "$1" ] && exit

icon="$2"
[ -z "$2" ] && icon="$1"

case $BLOCK_BUTTON in
	1) 
        notify-send \
            -h string:x-canonical-private-synchronous:i3bdsk \
            "ðŸ’½ Disk space" "$(df -hT -x tmpfs -x squashfs -x devtmpfs)" 
        ;;
    3) 
        notify-send \
            -h string:x-canonical-private-synchronous:i3bdsk \
            "Scanning $HOME..."
        notify-send \
            -h string:x-canonical-private-synchronous:i3bdsk \
            "ðŸ’½ Home folder disk usage by folder" "$(sudo du -hs $HOME/* | sort -h)" 
        ;;
esac

printf "%s %s\n" "$icon" "$(df -h "$1" | awk ' /[0-9]/ {print $3 "/" $2}')"
