#!/bin/sh

case $BLOCK_BUTTON in
	1) tmux selectw -taud & ;;
	2) pamixer --toggle-mute ;;
	4) pamixer -i 5 ;;
	5) pamixer -d 5 ;;
	3) notify-send "ðŸ“¢ Volume module:" " - Shows volume ðŸ”Š, ðŸ”‡ if muted. \n - Middle click to mute. \n - Scroll to change."
esac

[ "$(pamixer --get-mute)" = "true" ] && printf "ðŸ”‡\\n" && exit

vol=$(pamixer --get-volume | awk '{print $1}')

if [ "$vol" -gt "70" ]; then
	icon="ðŸ”Š"
elif [ "$vol" -lt "30" ]; then
	icon="ðŸ”ˆ"
else
	icon="ðŸ”‰"
fi

printf "%s %s%%\\n" "$icon" "$vol"
