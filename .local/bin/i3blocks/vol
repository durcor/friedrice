#!/bin/sh

case $BLOCK_BUTTON in
    # Left Click
	1) 
    togglepavu(){
        if pgrep pavucontrol; then
            killall -9 pavucontrol
        else
            setsid pavucontrol
        fi
    }

    togglepavu 
    ;;
    # Middle Click
	2) 
    pamixer --toggle-mute 
    ;;
    # Right Click
	3) 
    killall -9 pavucontrol 
    ;;
    # Scroll Up
	4) 
    pamixer -i 5 
    ;;
    # Scroll Down
	5) 
    pamixer -d 5 
    ;;
    # Backward Button
    8) ;;
    # Forward Button
    9) ;;
esac

vol=$(pamixer --get-volume)

if [ "$vol" -lt "30" ];then
	icon="ðŸ”ˆ"
elif [ "$vol" -lt "70" ];then
	icon="ðŸ”‰"
elif [ "$(pamixer --get-mute)" = "true" ];then
    printf "ðŸ”‡\\n" && exit
else
	icon="ðŸ”Š"
fi

printf "%s %s%%\\n" "$icon" "$vol"
