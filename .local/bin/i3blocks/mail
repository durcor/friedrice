#!/bin/sh
case $BLOCK_BUTTON in
    1) systemctl --user restart mailsync ;;
	2) tmux selectw -tneomutt ;;
    3) systemctl --user restart mailsync ;;
esac

if [ -f /tmp/imapsyncicon_"$USER" ]; then
    icon=
else
    icon=
fi

echo "$icon  $(du -a ~/.local/share/mail/*/INBOX/new/* | sed -n '$=')"
