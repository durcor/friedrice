#!/bin/sh

case $BLOCK_BUTTON in
    # left click
	1) 
    tmux selectw -tneomutt & 
    ;;
    # middle click
	2) 
    systemctl --user restart vdirsyncer 
    ;;
    # scroll up
	4) 
    notify-send "Upcoming Events" "$(khal list --format '{calendar} {start-time} {title}' today tomorrow)" 
    ;;
    # scroll down
	5) 
    notify-send "Upcoming Events" "$(khal list --format '{calendar} {start-time} {title}' today tomorrow)" 
    ;;
    # right click
	3) 
    notify-send "Upcoming Events" "$(khal list --format '{calendar} {start-time} {title}' today tomorrow)" 
    ;;
esac

echo "  $(date '+%H%M/%S %m/%d/%Y') $(cat /tmp/calsync)"
